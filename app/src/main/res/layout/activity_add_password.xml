<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_password">

    <TextView
        android:id="@+id/textView"
        android:layout_width="396dp"
        android:layout_height="57dp"
        android:text="@string/addPass_addNew"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/addPass_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.574" />

    <Button
        android:id="@+id/addPass_submit_Btn"
        android:layout_width="124dp"
        android:layout_height="71dp"
        android:text="@string/submit_addPass_Btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addPass_password2"
        app:layout_constraintVertical_bias="0.466" />

    <EditText
        android:id="@+id/addPass_password2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Re-Enter Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/addPass_submit_Btn"
        app:layout_constraintTop_toBottomOf="@+id/addPass_password"
        tools:layout_editor_absoluteX="99dp" />

    <EditText
        android:id="@+id/addPass_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Account Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/addPass_URL"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="99dp" />

    <EditText
        android:id="@+id/addPass_password"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="@string/addPass_password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/addPass_password2"
        app:layout_constraintTop_toBottomOf="@+id/addPass_UsrName"
        tools:layout_editor_absoluteX="99dp" />

    <EditText
        android:id="@+id/addPass_UsrName"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="@string/addPass_UsrName"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/addPass_password"
        app:layout_constraintTop_toBottomOf="@+id/addPass_URL"
        tools:layout_editor_absoluteX="99dp" />

    <EditText
        android:id="@+id/addPass_URL"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="@string/addPass_URL"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/addPass_UsrName"
        app:layout_constraintTop_toBottomOf="@+id/addPass_name"
        tools:layout_editor_absoluteX="99dp" />
</androidx.constraintlayout.widget.ConstraintLayout>